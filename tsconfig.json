{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "resolveJsonModule": true,
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules"]
}
